@page
@model BookLibrarySystem.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Index";

}

@section Styles {
    @{await Html.RenderPartialAsync("_TemplateStylePartial");}

}
<!-- Loader Begin -->





<div id="back-top">
    <a href="#" class="scroll">
        <i class="arrow_carrot-up"></i>
    </a>
</div>



@if (Model.Cart == null)
{
    <h1>No book has been choiced</h1>
}
else
{
    if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-primary">
            @Model.Message
        </div>
    }
    if ((Model.Cart.CartItems.Count == 0))
    {
        <h1>No book has been choiced</h1>
    }
    else
    {
        <div class="cart-table">
            <div class="container padding-vertical-100">
                <div class="row">
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product photo</th>
                                        <th>Product name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total Price</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <!-- /thead -->

                                <tbody>
                                    @foreach (var item in @Model.Cart.CartItems)
                                    {
                                        <partial name="_CartItemPartial" model="@item" />
                                    }
                                </tbody>
                                <!-- /tbody -->
                            </table>
                            <!-- /table -->
                        </div>
                        <!-- /table-responsive -->
                        <!-- /row -->
                    </div>
                    <div class="col-md-4">
                        <form method="post">
                            <div class="shop_measures">
                                <div class="form-group">
                                    <label asp-for="Address">Address: </label>
                                    <input asp-for="Address" class="form-control" required>
                                </div>
                                <h4>cart totals</h4>
                                <ul class="cart-total padding-top-50 margin-bottom-80">

                                    <li>
                                        Cart Totals:<span class="product-price total" id="total"><i class="fa fa-gbp"></i>@Model.Total VND</span>
                                    </li>
                                </ul>
                                <!-- /cart-total -->
                                <button type="submit" class="btn-form">Checkout</button>
                            </div>
                        </form>
                        <!-- /shop_measures -->
                    </div>
                    <!-- /column -->
                </div>
                <!-- /row -->

                <div class="row margin-top-100">

                    <!-- /column -->
                    <!-- /column -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
    }

}



@section Scripts {
    @{await Html.RenderPartialAsync("_TemplateScriptPartial");}
    <script>
    var total = 0;
    function Update(id, input) {
        $.ajax({
                type: "GET",
                url: "@Url.Page("/Cart/Index","Update")",
                data: {id : id, quantity:input.value},
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                location.reload();
                },
                failure: function (response) {
                    alert(response);
                }
            });
    }
    function DeleteItem(id) {
        $.ajax({
                type: "GET",
                url: "@Url.Page("/Cart/Index","DeleteItem")",
                data: {id : id},
                contentType: "application/json",
                dataType: "json",
            success: function (response) {
                location.reload();
                },
                failure: function (response) {
                    alert(response);
                }
            });
    }
    </script>
}
