@page
@model BookLibrarySystem.Pages.Order.IndexModel

@{
    ViewData["Title"] = "Index";
    var count = 1;
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().TotalPrice)
            </th>
            <th>
                Buy Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @(count++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

