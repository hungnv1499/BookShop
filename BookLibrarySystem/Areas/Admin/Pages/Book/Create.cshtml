@page
@model BookLibrarySystem.Areas.Admin.Pages.Book.CreateModel

@{
    ViewData["Title"] = "Create";
   // var photoPath = "~/images/" + (Model.Books.Image ?? "default.png");
}

<h1>Create</h1>

<h4>Books</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Books.BookName" class="control-label"></label>
                <input asp-for="Books.BookName" class="form-control" />
                <span asp-validation-for="Books.BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Description" class="control-label"></label>
                <input asp-for="Books.Description" class="form-control" />
                <span asp-validation-for="Books.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.BrandID" class="control-label"></label>
                <select asp-for="Books.BrandID" class="form-control" asp-items="ViewBag.BrandID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Books.AuthorID" class="control-label"></label>
                <select asp-for="Books.AuthorID" class="form-control" asp-items="ViewBag.AuthorID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Books.CategoryID" class="control-label"></label>
                <select asp-for="Books.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Books.Quantity" class="control-label"></label>
                <input asp-for="Books.Quantity" class="form-control" />
                <span asp-validation-for="Books.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.UnitPrice" class="control-label"></label>
                <input asp-for="Books.UnitPrice" class="form-control" />
                <span asp-validation-for="Books.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="custom-file-input form-control">
                        <label class="custom-file-label">Click here to change photo</label>
                    </div>
                </div>
            </div>
            @*<div class="row">
                <div class="col-md-6">
                    <div class="form-group offset-4">
                        <img src="@photoPath" asp-append-version="true" />
                    </div>
                </div>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
