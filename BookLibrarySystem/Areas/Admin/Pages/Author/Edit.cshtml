@page "{id}"
@model BookLibrarySystem.Areas.Admin.Pages.Author.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Authors</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Authors.ID" />
            <input type="hidden" asp-for="Authors.Actived" />
            <input type="hidden" asp-for="Authors.Deleted" />
            <div class="form-group">
                <label asp-for="Authors.AuthorName" class="control-label"></label>
                <input asp-for="Authors.AuthorName" class="form-control" />
                <span asp-validation-for="Authors.AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
